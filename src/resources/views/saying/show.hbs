  <form class="container mt-4" name="container-form" method="POST" action="/khoa-hoc/handle-form-action">
  <h3 class="text-center pb-4 havemust-title">DevPlus What alumni saying</h3>
  <div class="havemust-box">
    <div class="box-buttonfunction">
      <div>
        <a href="/saying/trash" class="button-garbage button-addnewdata">
          Garbage can
          <i class="fa-solid fa-trash-arrow-up"></i>
          {{deletedCount}}</a>
      </div>
    </div>
  </div>
  <table class="table-havemust table table-bordered table-striped">
    <thead>
      <tr class="column-title">
        <th scope="col" >Index</th>
        <th scope="col" class="col-1">Name</th>
        <th scope="col" class="col-4">Title</th>
        <th scope="col" class="col-2">Avatar</th>
        <th scope="col"  colspan="2">Action </th>
      </tr>
    </thead>
    </thead>
    <tbody>
      {{#each data}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this._doc.name}}</td>
        <td>{{this._doc.title}}</td>
        <td><img src="{{this._doc.imageAvatar}}" alt="devplus"></td>
        <td >
          <a href="/saying/{{this._doc._id}}/edit" data-target="#edit-saying-modal">
            <i class="fa-solid-edit fa-solid fa-file-pen"></i>
          </a>
        </td>
        <td>
          <a href="/saying/{{this._doc._id}}/delete"  data-toggle="modal"
            data-id="{{this._doc._id}}" data-target="#delete-saying-modal">
            <i class="fa-sharp fa-solid-delete fa-solid fa-trash"></i>
          </a>
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="5" class="text-center">Bạn chưa có thông tin. Hãy đi tạo mới thông tin</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</form>
{{!-- create --}}
<div class="modal fade" id="create-saying-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">ADD NEW DATA</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/saying/create" enctype="multipart/form-data">
          <div class="form-group">
            <label for="name">Name User</label>
            <input type="text" class="form-control" id="name" name="name" required />
          </div>
          {{!-- <div class="form-group">
            <label for="imageAvatar">Avatar User</label>
            <input type="text" class="form-control" id="imageAvatar" name="imageAvatar" required />
          </div> --}}
          <div class="form-group">
            <input type="file" class="form-control" id="imageAvatar" name="imageAvatar" required/>
            <label for="imageAvatar" class="imageAvatar">Select file<i class="fa-solid fa-cloud-arrow-up"></i></label>
            <div class="img"></div>
          </div>
          <div class="form-group">
            <label for="desc">DESC User</label>
            <input type="text" class="form-control" id="desc" name="desc" required />
          </div>
          <div class="form-group">
            <label for="title">title</label>
            <input type="text" class="form-control" id="title" name="title" required />
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Add Data</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{!-- delete --}}
<div class="modal fade" id="delete-saying-modal" tabindex="-1" role="dialog" aria-labelledby="delete-Label"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Data</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        You want delete data ?
      </div>
      <div class="modal-footer">
        <button type="button" id="btn-delete-saying" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-saying-form" method="POST">
</form>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    let sayingId = 0;
    const deleteForm = document.forms['delete-saying-form']
    $('#delete-saying-modal').on('show.bs.modal', function (event) {
      const button = $(event.relatedTarget) // Button that triggered the modal
      sayingId = button.data('id') // Extract info from data-* attributes   
    })
    const btnDeleteSaying = document.getElementById('btn-delete-saying');
    btnDeleteSaying.onclick = function () {
      deleteForm.action = '/saying/' + sayingId + '?_method=DELETE';
      deleteForm.submit();
    }
  })
</script>