<form
  class="container mt-4"
  name="container-form"
  method="POST"
  action="/khoa-hoc/handle-form-action"
>

  <h3 class="text-center pb-4 havemust-title">Admission</h3>

  <table class="table-havemust table table-bordered table-striped">
    <thead>

      <tr class="column-title">
        <th scope="col" class="col-1">Index</th>
        <th scope="col" class="col-2">Title</th>
        <th scope="col" class="col-2">Avatar</th>
        <th scope="col" class="col-3">Description 1</th>
        <th scope="col" class="col-3">Description 2</th>
        <th scope="col" class="col-1" >Action </th>

      </tr>
    </thead>
    <tbody>
      {{#each data}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this._doc.title}}</td>
          <td><img src="{{this._doc.avatar}}" alt=""></td>
          <td>{{this._doc.intro_1}}</td>
          <td>{{this._doc.intro_2}}</td>
          <td>
            <a href="/admission/{{this._doc._id}}/edit"
            {{!-- id="btn-create-course" --}}
            {{!-- data-toggle="modal"
            data-id="{{this._doc._id}}" --}}
            data-target="#edit-saying-modal"><i class="fa-solid-edit fa-solid fa-file-pen"></i></a>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="5" class="text-center">Bạn chưa có thông tin. Hãy đi tạo mới thông tin
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</form>

{{!-- delete --}}
<div class="modal fade" id="delete-saying-modal" tabindex="-1" role="dialog" aria-labelledby="delete-Label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Data</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          You want delete data ?
      </div>
      <div class="modal-footer">
        <button type="button" id="btn-delete-saying" class="btn btn-primary">Save changes</button>
        <button type="button"  class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-saying-form" method="POST">
</form>
<script>
  document.addEventListener('DOMContentLoaded', () => {
      let sayingId = 0;
      const deleteForm = document.forms['delete-saying-form']
      $('#delete-saying-modal').on('show.bs.modal', function (event) {
        const button = $(event.relatedTarget) // Button that triggered the modal
        sayingId = button.data('id') // Extract info from data-* attributes   
      })
      const btnDeleteSaying = document.getElementById('btn-delete-saying');
      btnDeleteSaying.onclick = function() {
        deleteForm.action = '/saying/' + sayingId + '?_method=DELETE';
        deleteForm.submit();
      }
    })
</script>
