<form class="container mt-4" name="container-form" method="POST" action="/khoa-hoc/handle-form-action">
    <h3 class="text-center pb-4 havemust-title">DevPlus What alumni saying</h3>

    <div class="havemust-box">
        <div class="mt-4 mb-4 d-flex align-items-center">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="checkbox-all" />
                <label class="form-check-label" for="checkbox-all">Select All</label>
            </div>
            <select class="form-control form-control-sm checkbox-select-all-options" name="action" required>
                <option value="">-- Action --</option>
                <option>Delete</option>
            </select>
            <button class=" btn btn-primary btn-sm check-all-submit-btn disabled">Submit</button>
        </div>

        <div class="box-buttonfunction">
            <div>
                <a href="/me/trash/courses" class="button-garbage button-addnewdata">
                    Garbage can
                    <i class="fa-solid fa-trash-arrow-up"></i>
                    {{deletedCount}}</a>
            </div>

            <div>
                <a href="" data-toggle="modal" data-id="{{this._doc._id}}" data-target="#create-saying-modal"
                    class="button-addnewdata">Add New <i class="fa-solid fa-plus"></i> </a>
            </div>
        </div>


    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="column-title">
                <th scope="col">Check</th>
                <th scope="col">Index</th>
                <th scope="col" class="col-4">Description</th>
                <th scope="col" class="col-2">Logo</th>
                <th scope="col" class="col-3">Image</th>
                <th scope="col" colspan="2">Action </th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="coursesId[]" value="{{this._id}}">
                    </div>
                </td>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this._doc.description}}</td>
                <td>{{this._doc.logo}}</td>
                <td><img src="{{this._doc.map}}" alt="devpls"></td>

                <td>
                    <a href="/khoa-hoc/{{this._id}}/edit" class="btn btn-link"><i
                            class="fa-solid-edit fa-solid fa-file-pen"></i></a>
                </td>
                <td>
                    <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}"
                        data-target="#delete-course-modal"> <i
                            class="fa-sharp fa-solid-delete fa-solid fa-trash"></i></a>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="7" class="text-center">
                    Bạn chưa đăng khóa học nào.
                    <a href="/khoa-hoc/create">Tạo mới khóa học</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</form>