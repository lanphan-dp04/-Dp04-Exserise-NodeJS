{{>header}}
<div class="row">
  {{>nav}}
  <div class="col-lg-10">
    <form class="container mt-4" name="container-form" method="POST" action="/khoa-hoc/handle-form-action">
      <div>
        <h3 class="text-center pb-4 havemust-title">Trash About DevPlus</h3>
        <div class="havemust-box">
          <div class="box-buttonfunction">
            <div>
              <a href="/about/list" class="button-garbage button-addnewdata">
                Back List
                <i class="fa-solid fa-rotate-left"></i></a>
            </div>
          </div>
        </div>
      </div>
      <table class=" table-havemust table table-bordered table-striped">
        <thead>
          <tr class="column-title">
            <th scope="col" class="col-1">Index</th>
            <th scope="col" class="col-3">Title</th>
            <th scope="col" class="col-1">Restore </th>
            <th scope="col" class="col-1">Permanently deleted </th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this._doc.title}}</td>
            <td class="col-1">
              <a href="" class="btn-restore" data-id="{{this._doc._id}}"><i class="fa-solid fa-trash-can-arrow-up"></i></a>
            </td>
            <td class="col-1">
              <a href="/about/{{this._doc._id}}/delete" class="btn btn-link" data-toggle="modal" data-id="{{this._doc._id}}"
                data-target="#delete-saying-modal"><i class="fa-sharp fa-solid-delete fa-solid fa-trash"></i></a>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="5" class="text-center">
              Thùng rác trống.
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </form>

    {{!-- delete --}}
    <div class="modal fade" id="delete-saying-modal" tabindex="-1" role="dialog" aria-labelledby="delete-Label"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Delete Data</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            You want delete data ?
          </div>
          <div class="modal-footer">
            <button type="button" id="btn-delete-saying" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <form name="delete-saying-form" method="POST">
    </form>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    let sayingId = 0;
    const deleteForm = document.forms['delete-saying-form']
    $('#delete-saying-modal').on('show.bs.modal', function (event) {
      const button = $(event.relatedTarget) // Button that triggered the modal
      sayingId = button.data('id') // Extract info from data-* attributes   
    })
    const btnDeleteSaying = document.getElementById('btn-delete-saying');
    btnDeleteSaying.onclick = function () {
      deleteForm.action = '/about/' + sayingId + '/force?_method=DELETE';
      deleteForm.submit();
    }
    // restore
    var restoreBtn = $(".btn-restore");
    // Restore btn clicked
    restoreBtn.click(function (e) {
      e.preventDefault();

      var courseId = $(this).data('id');
      deleteForm.action = '/about/' + courseId + '/restore?_method=PATCH';
      deleteForm.submit();
    });
  })
</script>