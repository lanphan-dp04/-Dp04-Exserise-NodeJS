{{>header}}
<div class="row">
  {{>nav}}
  <div class="col-lg-10">
    <div class="container-form">
      <h3 class="editdataform-title">
        Edit Data About Devplus
      </h3>
      <div class="form-warapper">
        <form method="POST" action="/must-have/{{data._id}}?_method=PUT" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Name Data</label>
        <input type="text" value="{{data.title}}" class="form-control" id="title" name="title" required />
      </div>
      <div class="form-group">
        <label for="course">Name course</label>
        <input type="text" value="{{data.course}}" class="form-control" id="course" name="course" required />
      </div>
      {{!-- <div class="form-group">
        <label for="icon">Name Icon</label>
        <input type="text" value="{{data.icon}}" class="form-control" id="icon" name="icon" required />
      </div> --}}
      <div class="form-group">
        <input type="file" class="form-control" id="icon" name="icon" required/>
        <label for="icon" class="icon">Select file<i class="fa-solid fa-cloud-arrow-up"></i></label>
        <div class="img-showImg" style="background-image: url({{data.icon}});"></div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Edit Data</button>
      </div>
    </form>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    let input=document.querySelector('input')
    input.addEventListener('change',function(){
    const reader=new FileReader()
    reader.addEventListener('load',function(){
    document.querySelector('.img-showImg').style.backgroundImage=`url(${reader.result})`
    })
    reader.readAsDataURL(this.files[0])
})
    })
</script>



