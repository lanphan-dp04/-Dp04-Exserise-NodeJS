<div class="container-form">
  <h3 class="editdataform-title">
    Edit Data DevPlus Campus
  </h3>
  <div class="form-warapper">
    <form method="POST" action="/campus/{{data._id}}?_method=PUT">
  <div class="form-group">
    <label for="name">Title for Campus</label>
    <input type="text" value="{{data.name}}" class="form-control" id="name" name="name" required />
  </div>
  <div class="form-group">
    <label for="imageAvatar">Avatar</label>
    <input
      type="text"
      value="{{data.avatar}}"
      class="form-control"
      id="imageAvatar"
      name="imageAvatar"
      required
    />
  </div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-primary">Add Data</button>
    <button
      type="button"
      class="btn btn-secondary"
      data-dismiss="modal"
    >Close</button>
  </div>
</form>
  </div>
</div>

