{{>header}}
<div class="row">
  {{>nav}}
  <div class="col-lg-10">
    <form
      class="container mt-4"
      name="container-form"
      method="POST"
      action="/khoa-hoc/handle-form-action"
    >
      <h3 class="text-center pb-4 havemust-title">DevPlus Must Campus Trash</h3>
      <div class="havemust-box">
        <div class="box-buttonfunction">
          <div>
            <a href="/campus/list" class="button-garbage button-addnewdata">
              Back List
              <i class="fa-solid fa-trash-arrow-up"></i>
              {{deletedCount}}</a>
          </div>
        </div>
      </div>
      <table class="table-havemust table table-bordered table-striped">
        <thead>
            <th scope="col" >Index</th>
            <th scope="col" class="col-4">Title</th>
            <th scope="col" class="col-2">Image</th>
            <th scope="col"  colspan="2">Action </th>

        </thead>
        <tbody>
          {{#each data}}
            <tr>
              <th scope="row">{{sum @index 1}}</th>
              <td>{{this._doc.name}}</td>

              <td><img src="{{this._doc.avatar}}" alt="devplus"></td>

              <td>
                <a class="btn-restore" data-target="#edit-saying-modal" data-id="{{this._doc._id}}">
                  <i class="fa-solid fa-trash-can-arrow-up"></i>
                </a>
              </td>
              <td>
                <a
                  href="/campus/{{this._doc._id}}/delete"
                  class="btn btn-link"
                  data-toggle="modal"
                  data-id="{{this._doc._id}}"
                  data-target="#delete-saying-modal"
                >
                  <i class="fa-sharp fa-solid-delete fa-solid fa-trash"></i>
                </a>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan="5" class="text-center">Thùng rác trống</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </form>
    {{!-- create --}}
    <div
      class="modal fade"
      id="create-saying-modal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">ADD NEW DATA</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form method="POST" action="/campus/create">
              <div class="form-group">
                <label for="name">Name User</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  required
                />
              </div>
              <div class="form-group">
                <label for="imageAvatar">Avatar User</label>
                <input
                  type="text"
                  class="form-control"
                  id="imageAvatar"
                  name="imageAvatar"
                  required
                />
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Add Data</button>
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >Close</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    {{!-- delete --}}
    <div class="modal fade" id="delete-saying-modal" tabindex="-1" role="dialog" aria-labelledby="delete-Label" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Delete Data</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
              You want delete data ?
          </div>
          <div class="modal-footer">
            <button type="button" id="btn-delete-saying" class="btn btn-danger">Delete Force</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <form name="delete-saying-form" method="POST">
    </form>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
      let sayingId = 0;
      const deleteForm = document.forms['delete-saying-form']
      $('#delete-saying-modal').on('show.bs.modal', function (event) {
        const button = $(event.relatedTarget) // Button that triggered the modal
        sayingId = button.data('id') // Extract info from data-* attributes   
      })
      const btnDeleteSaying = document.getElementById('btn-delete-saying');
      btnDeleteSaying.onclick = function() {
        deleteForm.action = '/campus/' + sayingId + '/force?_method=DELETE';
        deleteForm.submit();
      }
      // restore
    var restoreBtn = $(".btn-restore");
    // Restore btn clicked
    restoreBtn.click(function (e) {
      e.preventDefault();
      var courseId = $(this).data('id');
      deleteForm.action = '/campus/' + courseId + '/restore?_method=PATCH';
      deleteForm.submit();
    });
    })
</script>
